{
    "compilerOptions": {
        "lib": ["es2020", "DOM"],
        "module": "commonjs",
        "outDir": "dist",
        "moduleResolution": "node",
        "sourceMap": true,
        "strict": true,
        "target": "ES2020",
        "esModuleInterop": true,
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "ts-node": {
        "transpileOnly": true,
        // "esm": true,
        "swc": true,
        "experimentalSpecifierResolution": "node"
    },

    "include": ["src"]
}
